<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Hello, <%= username %>
  </title>
  <style>
    h1 {
      text-align: center;
    }

    table {
      border-collapse: collapse;
      width: 80%;
      margin: 10px auto;
    }

    a {
      text-decoration: none;
      color: black;
    }

    th,
    td {
      text-align: left;
      padding: 5px;
    }

    .far {
      color: black;
      font-weight: bolder;
    }

    .far:hover {
      color: brown;
    }

    .fas {
      color: brown;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    input[type=text] {
      padding: 6px;
      margin-top: 8px;
      font-size: 17px;
      border: none;
      border-bottom: 1px solid #333;
    }

    form {
      text-align: right;
      margin-right: 120px;
    }

    .button {
      padding: 8px 10px;
      border-radius: 5px;
      background-color: tomato;
      color: white;
      margin-left: 30px;
    }

    .button:hover {
      background-color: rgb(206, 76, 53);
    }
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
    integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w=="
    crossorigin="anonymous" />
</head>

<body>
  <h1>Welcome, <%= username %>
  </h1>
  <div>
    <a href="/logout" class="button">Logout</a>
    <form action="/musicPlayer" method="POST">
      <input type="text" placeholder="Search.." name="search">
      <button type="submit"><i class="fa fa-search"></i></button>
    </form>
  </div>
  <table>
    <% data.forEach(element=> { %>
      <tr>
        <td>
          <h4><a href="/musicPlayer/<%= element.embed_url %>">
              <%= element.title %>
            </a></h4>
        </td>
        <% if (element.Users.length !==0) { %>
          <% for( let i=0; i < element.Users.length; i++ ) { %>
            <% if (element.Users[i].username===username) { %>
              <td><a href="/<%= element.id %>/addFavoritSong"><i class="fas fa-heart"></i></a></td>
              <% } else {%>
                <td><a href="/<%= element.id %>/addFavoritSong"><i class="far fa-heart"></i></a></td>
                <% } %>
                  <% } %>
                    <% } else {%>
                      <td><a href="/<%= element.id %>/addFavoritSong"><i class="far fa-heart"></i></a></td>
                      <% } %>
      </tr>
      <% }) %>
  </table>
</body>

</html>